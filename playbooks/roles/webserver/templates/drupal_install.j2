drush dl --drupal-project-rename=/var/www/{{ apache_hostname }}/docroot --yes
cp /var/www/{{ apache_hostname }}/docroot/sites/default/default.settings.php /var/www/{{ apache_hostname }}/docroot/sites/default/settings.php
mkdir /var/www/{{ apache_hostname }}/docroot/sites/default/files
mkdir /var/www/{{ apache_hostname }}/docroot/sites/all/modules/contrib
