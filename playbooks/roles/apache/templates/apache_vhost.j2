<VirtualHost *:{{ http_port }}>
  ServerAdmin {{ apache_admin_mail }}
  ServerName {{ apache_hostname }}
  ServerAlias {{ apache_hostname_alias }}

  DocumentRoot /var/www/site/docroot

  <Directory /var/www/site/docroot>
    Options FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog /var/www/site/logs/error.log

  LogLevel warn
  CustomLog /var/www/site/logs/access.log combined
</VirtualHost>